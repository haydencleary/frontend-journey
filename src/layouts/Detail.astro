---
import Layout from './Layout.astro';

export interface Step {
	title: string;
	href: string;
}

export interface Props {
	content: {
		title: string;
		description: string;
		prev?: Step;
		next?: Step;
	};
}

const { content } = Astro.props as Props;
---

<Layout title={`${content.title}: Frontend Journey`} description={content.description}>
	<div class="prose-brand prose-lg text-gray-700 max-w-prose mx-auto">
		<slot />
	</div>
	<section class="flex justify-between mt-16 sm:mt-24">
		<div>
			{content.prev ? <a
				href={content.prev.href}
				class="inline-flex items-center font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
			>
				<svg
					class="mr-3 h-5 w-5 text-brand-400"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 20 20"
					fill="currentColor"
					aria-hidden="true"
				>
					<path
						fill-rule="evenodd"
						d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
						clip-rule="evenodd"></path>
				</svg>
				<span>
					Previous:<br />
					{content.prev.title}
				</span>
			</a> : null}
		</div>
		<div>
			{content.next ? <a
				href={content.next.href}
				class="inline-flex items-center font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
			>
				<span class="text-right">
					Next:<br />
					{content.next.title}
				</span>
				<svg
					class="ml-3 h-5 w-5 text-brand-400"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 20 20"
					fill="currentColor"
					aria-hidden="true"
				>
					<path
						fill-rule="evenodd"
						d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
						clip-rule="evenodd"></path>
				</svg>
			</a> : null}
		</div>
	</section>
</Layout>
