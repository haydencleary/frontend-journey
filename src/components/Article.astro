---
export interface Props {
	title: string;
	description: string;
	href: string;
	src: string;
	alt: string;
}

const { title, description, href, src, alt } = Astro.props as Props;
---

<!-- TODO repsonsive design -->
<article class="w-full my-16">
	<div class="flex">
		<div class="aspect-square w-full mr-8">
			<img class="object-cover shadow-lg rounded-lg" {src} {alt} />
		</div>
		<div>
			<h2 class="text-2xl font-bold text-gray-900 tracking-tight sm:text-3xl underline">
				{title}
			</h2>
			<p class="text-lg text-gray-500 mt-6">
				{description}
			</p>
			<div class="mt-3">
				<a {href} class="text-base font-bold text-indigo-600 hover:text-indigo-500">
					Read full story
				</a>
			</div>
		</div>
	</div>
</article>
